{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"allowJs": false,
		"isolatedModules": true,
		"allowSyntheticDefaultImports": false,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "dist",
		"declaration": true
	},
	"include": ["src", "tests", "playwright.config.ts"]
}
